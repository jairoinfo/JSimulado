<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#7ff3e4"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Menu"
        android:textSize="20dp"
        android:layout_marginTop="5dp"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnAneste"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:onClick="ClickAneste"
            android:layout_marginTop="5dp"
            android:text="Anestesiologia"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnCariologia"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:onClick="ClickCario"
            android:layout_marginTop="5dp"
            android:text="Cariologia"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnOGeral"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:onClick="ClickOGeral"
            android:layout_marginTop="5dp"
            android:text="Odontologia Geral"
            android:textSize="20dp" />

    </LinearLayout>

</LinearLayout>